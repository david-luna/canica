{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["node_modules/*"],
      "@annotations/*": ["src/annotations/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
